<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <style>
        header {
            background: #4c4c4c;
        }

        .sidebar {
            max-height: 100%;
            min-height: 600px;
            background: #4c4c4c;
        }

        .sidebar a {
            color: #fff;
        }

        .sidebar li .submenu {
            list-style: none;
            margin: 0;
            padding: 0;
            padding-left: 1rem;
            padding-right: 1rem;
        }

        .sidebar .nav-link,
        .nav-link {
            color: #fff !important;
            padding-left: 0;
        }

        .sidebar .nav-link:hover {
            color: var(--bs-primary);
        }

        .dashboard-content-area {
            padding: 25px;
            background: #fff;
        }

        .dashboard-content-area h1 {
            font-size: 23px;
            padding-bottom: 20px;
        }
    </style>
</head>

<body>
    <header class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand text-white ml-4" href="/admin/"><b>Admin Panel</b></a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <div class="mr-5">
                    <ul class="navbar-nav mr-auto mr-0">

                    </ul>
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid bg-side-nav">
        <div class="row">
            <div class="col-lg-2 sidebar">
                <aside>
                    <nav class="sidebar py-2 mb-4">
                        <ul class="nav flex-column" id="nav_accordion">
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="collapse" data-bs-target="#menu_item1" href="#">
                                    Drivers <i class="bi small bi-caret-down-fill"></i> </a>
                                <ul id="menu_item1" class="submenu collapse" data-bs-parent="#nav_accordion">
                                    <li><a class="nav-link" href="admin/drivers">Add Drivers</a></li>
                                </ul>
                                <ul id="menu_item1" class="submenu collapse" data-bs-parent="#nav_accordion">
                                    <li><a class="nav-link" href="/admin/nikhil">show-Drivers</a></li>
                                </ul>
                            </li>


                        </ul>
                    </nav>
                </aside>
            </div>
            <div class="col-lg-10">
                <div class="dashboard-content-area">
                    <!-- put your content here -->

                    <div class="row">
                        <div class="col-lg-3 col-6">
                            <!-- small box -->
                            <div class="small-box bg-info">
                                <div class="inner">
                                    <h3>

                                    </h3>
                                    <p>Drivers</p>
                                </div>
                                <div class="icon">
                                    <i class="ion ion-bag"></i>
                                </div>
                                <a href="/admin/driver/" class="small-box-footer">More info <i
                                        class="fas fa-arrow-circle-right"></i></a>
                            </div>
                        </div>

                        <h2>Driver List</h2>
                        <ul>
                            <% drivers.forEach(driver=> { %>
                                <li>
                                    <%= driver.model %> (Version: <%= driver.version %>)
                                            <form action="/admin/drivers/<%= driver._id %>?_method=DELETE"
                                                method="post">
                                                <button type="submit">Delete</button>
                                            </form>
                                </li>
                                <% }); %>
                                    <h2>Upload New Driver</h2>
                                    <form action="/admin/drivers" method="post" enctype="multipart/form-data">
                                        <label for="model">Model:</label>
                                        <input type="text" id="model" name="model" required><br>
                                        <label for="version">Version:</label>
                                        <input type="text" id="version" name="version" required><br>
                                        <label for="releaseDate">Release Date:</label>
                                        <input type="date" id="releaseDate" name="releaseDate" required><br>
                                        <label for="driverFile">Upload Driver File:</label>
                                        <input type="file" id="driverFile" name="driverFile" accept=".exe, .msi"
                                            required><br>
                                        <button type="submit">Upload Driver</button>
                                    </form>

                        </ul>

                        <!-- ./col -->

                        <!-- ./col -->

                        <!-- ./col -->
                        <div class="col-lg-3 col-6">
                            <div class="small-box bg-danger">
                                <div class="inner">
                                    <h3>

                                    </h3>

                                </div>
                                <div class="icon">
                                    <i class="ion ion-pie-graph"></i>
                                </div>


                            </div>
                        </div>
                    </div>

                    <!-- end your content here -->
                </div>
            </div>
        </div>
    </div>
</body>

</html>